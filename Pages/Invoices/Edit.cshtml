@page "{id:int}"
@model rp_ims.Pages.Invoices.EditModel
@{
    ViewData["Title"] = "Rechnung bearbeiten";
}

<h1 class="display-4">Rechnung bearbeiten</h1>

<div class="card my-3">
    <div class="card-header">
        Rechnungsposten
    </div>
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Beschreibung</th>
        <th scope="col">Preis</th>
        <th scope="col">Aktionen</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1x Cola</td>
            <td>10 $</td>
            <td>
                <a class="btn btn-sm btn-outline-danger" href="#">Löschen</a>
            </td>
        </tr>
        <tr>
            <td>2x Wasser</td>
            <td>10 $</td>
            <td>
                <a class="btn btn-sm btn-outline-danger" href="#">Löschen</a>
            </td>
        </tr>
    </tbody>
    </table>
</div>

<div class="card my-3">
    <div class="card-header">
        Rechnungsposten hinzufügen
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label for="description" class="form-label">Beschreibung</label>
                <input type="text" class="form-control" id="description">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Betrag</label>
                <div class="input-group">
                    <input type="number" step="0.01" class="form-control" id="amount">
                    <span class="input-group-text">$</span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Hinzufügen</button>
        </form>
    </div>
</div>

<div class="card my-3">
    <div class="card-header">
        Rechnungsaktionen
    </div>
    <div class="card-body">
        <button class="btn btn-success">
            Rechnung abschließen
        </button>

        <button class="btn btn-danger">
            Rechnung löschen
        </button>
    </div>
</div>